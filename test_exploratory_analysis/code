import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.preprocessing import LabelEncoder
import seaborn as sns
db=pd.read_csv(r"C:\Users\harshit Raman\Downloads\test.csv")
db.info()
db.head()
desc=db.describe()
db.isnull().sum()
ls=LabelEncoder()
db["Gender"].isnull()
db['Gender'].fillna(db['Gender'].mode()[0],inplace=True)
db['Gender']=ls.fit_transform(db["Gender"])
# Display only the rows where the Gender value is missing
db[db["Gender"].isnull()]
db["Gender"].value_counts()
# Replace the "+" sign with "4" in the Dependents column
db["Dependents"] = db["Dependents"].str.replace(r"3+",r"4",regex=False) 
# Convert the Dependents column to numeric type
db["Dependents"] = pd.to_numeric(db["Dependents"])
# Replace the "4+" string with "4" in the Dependents column
db['Dependents'].value_counts()
db['Dependents'].isnull().sum()
db['Dependents'].fillna(db["Dependents"].mean(),inplace=True)
db["Dependents"].dtype
db["Dependents"].value_counts()
#Self_Employed 
db["Self_Employed"].isnull().sum()
db['Self_Employed'].head()
db['Self_Employed'].fillna(db['Self_Employed'].mode()[0],inplace=True)
db['Self_Employed']=ls.fit_transform(db["Self_Employed"])
#LoanAmount
db["LoanAmount"].isnull().sum()
db['LoanAmount'].head()
db['LoanAmount'].fillna(db['LoanAmount'].mean(),inplace=True)
#Loan_Amount_Term
db["Loan_Amount_Term"].isnull().sum()
db['Loan_Amount_Term'].head()
db['Loan_Amount_Term'].fillna(db['LoanAmount'].mean(),inplace=True)
db["Credit_History"]
db["Credit_History"].fillna(db["Credit_History"].mode()[0],inplace=True)
db.describe()
for col in db.columns:
    print("The column {} has {} unique values.".format(col, db[col].nunique()))
for col in db.select_dtypes(include=np.number):
    db[col].hist()
    plt.title(col)
    plt.show()
db.corr()
sns.pairplot(db)
plt.show()
